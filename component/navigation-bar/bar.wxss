/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  /* position: fixed; */
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 10;
  background-size:100% 100%;
  background-position: center center;
  box-sizing: border-box;
}

.nav-title-box{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position:absolute;
    width:100%;
    box-sizing: border-box;
    padding:0 10px;
}
.nav-left,.nav-button,.nav-center,.nav-right{
  height:100%;
}
.nav-left{
  display:flex;
  align-items: center;
  box-sizing: border-box;
}
.nav-left b{
  display:block;
  height:16px;
  width:1px;
  background:#000;
}
.button-border{
  border:1rpx solid rgba(126,126,126,0.1);
  background:rgba(0,0,0,0.1);
  border-radius:32px;
}
.nav-button{
  width:42px;
  display:flex;
  align-items: center;
  justify-content: center;
}
.nav-button image{
  width:18px;
  height:18px;
}
.nav-center{
  flex:1;
}