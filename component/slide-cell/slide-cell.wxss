.list{
    width:100%;
    height:70px;
    position:relative;
    border-bottom:1rpx solid #f0f0f0;
}
.list .left{
    width:100%;
    height:70px;
    background:#fff;
    padding:0 30rpx;
    line-height:70px;
    position: absolute;
    left:0;
    top:0;
    z-index:1;
    box-sizing: border-box;
    padding:10px 20px;
}
.left image{
    width:50px;
    height:50px;
    float:left;

}
.left view{
    
    float:left;
    height:50px;
    line-height:50px;
    font-size:16px;
	margin-left:10px;
}  
.list .right{
    width:100px;
    height:70px;
    background:red;
    position: absolute;
    right:0;
    top:0;
    color:#fff;
    line-height:70px;
    text-align:center;
}