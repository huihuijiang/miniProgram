/* pages/drop/dropCoin.wxss */
.bottom{
	position: fixed;
	bottom:0;
	left:0;
	/* top:0; */
	right:0;
	width:96%;
	margin:0 auto;
	height:50px;
	display: flex;
	flex-direction: row;
}
.bottom input{
	
	width:80%;
	height:40px;
	border:1px solid #eee;
}
.bottom button{

	flex:1;
	height:40px;
}
.coin{
	width:30px;
	height:30px;
	border-radius:50%;
	background:goldenrod;
	position: absolute;
}
.coin image{
	width:100%;
	height:100%;
}